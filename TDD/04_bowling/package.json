{
  "name": "tdd-typescript",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Justin Beall <justin@dev3lsolutions.com>",
  "description": "Katas in TypeScript",
  "homepage": "https://github.com/leandog/atdd-tdd-typescript",
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc -w",
    "test": "jest --no-watchman"
  },
  "devDependencies": {
    "@types/node": "^10.17.60",
    "@types/jest": "^19.2.3",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.14",
    "typescript": "~3.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
